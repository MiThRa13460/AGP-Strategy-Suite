<UserControl x:Class="AGPStrategy.Settings.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="400"
             Background="#1E1E1E">

    <UserControl.Resources>
        <!-- Styles for SimHub dark theme -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#B0B0B0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#3D3D3D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1084D9"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#555555"/>
                    <Setter Property="Foreground" Value="#888888"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DisconnectButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#D83B01"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E84C12"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#B0B0B0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <!-- Header -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="AGP Strategy Suite"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#E0E0E0"/>
                <TextBlock Text=" - Settings"
                           FontSize="20"
                           Foreground="#808080"/>
            </StackPanel>

            <!-- Connection Status -->
            <Border Background="#252525"
                    CornerRadius="5"
                    Padding="15"
                    Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Ellipse x:Name="StatusIndicator"
                             Width="12"
                             Height="12"
                             Fill="#FF4444"
                             VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" Margin="10,0">
                        <TextBlock x:Name="StatusText"
                                   Text="Disconnected"
                                   Foreground="#E0E0E0"
                                   FontSize="14"
                                   FontWeight="SemiBold"/>
                        <TextBlock x:Name="StatusDetails"
                                   Text="Not connected to AGP backend"
                                   Foreground="#808080"
                                   FontSize="11"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button x:Name="ConnectButton"
                                Content="Connect"
                                Style="{StaticResource ButtonStyle}"
                                Click="ConnectButton_Click"
                                Margin="0,0,5,0"/>
                        <Button x:Name="DisconnectButton"
                                Content="Disconnect"
                                Style="{StaticResource DisconnectButtonStyle}"
                                Click="DisconnectButton_Click"
                                IsEnabled="False"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Connection Settings -->
            <TextBlock Text="Connection Settings" Style="{StaticResource HeaderStyle}"/>

            <Border Background="#252525"
                    CornerRadius="5"
                    Padding="15"
                    Margin="0,0,0,20">
                <StackPanel>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Host:" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="HostInput"
                                 Grid.Column="1"
                                 Style="{StaticResource InputStyle}"
                                 TextChanged="HostInput_TextChanged"/>
                    </Grid>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Port:" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="PortInput"
                                 Grid.Column="1"
                                 Style="{StaticResource InputStyle}"
                                 TextChanged="PortInput_TextChanged"/>
                    </Grid>

                    <CheckBox x:Name="AutoConnectCheckBox"
                              Content="Auto-connect when SimHub starts"
                              Style="{StaticResource CheckBoxStyle}"
                              Checked="AutoConnectCheckBox_Changed"
                              Unchecked="AutoConnectCheckBox_Changed"/>
                </StackPanel>
            </Border>

            <!-- Notification Settings -->
            <TextBlock Text="Notifications" Style="{StaticResource HeaderStyle}"/>

            <Border Background="#252525"
                    CornerRadius="5"
                    Padding="15"
                    Margin="0,0,0,20">
                <StackPanel>
                    <CheckBox x:Name="ShowNotificationsCheckBox"
                              Content="Show recommendations notifications"
                              Style="{StaticResource CheckBoxStyle}"
                              Margin="0,0,0,10"
                              Checked="NotificationSettings_Changed"
                              Unchecked="NotificationSettings_Changed"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Minimum Priority:"
                                   Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="PriorityComboBox"
                                  Grid.Column="1"
                                  Background="#2D2D2D"
                                  Foreground="#E0E0E0"
                                  BorderBrush="#3D3D3D"
                                  SelectionChanged="PriorityComboBox_SelectionChanged">
                            <ComboBoxItem Content="Critical Only" Tag="1"/>
                            <ComboBoxItem Content="High and above" Tag="2"/>
                            <ComboBoxItem Content="Medium and above" Tag="3"/>
                            <ComboBoxItem Content="Low and above" Tag="4"/>
                            <ComboBoxItem Content="All notifications" Tag="5"/>
                        </ComboBox>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Available Properties Info -->
            <TextBlock Text="Available Properties" Style="{StaticResource HeaderStyle}"/>

            <Border Background="#252525"
                    CornerRadius="5"
                    Padding="15"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="The following properties are exposed to SimHub:"
                               Foreground="#808080"
                               FontSize="11"
                               Margin="0,0,0,10"/>

                    <Expander Header="Tire Data (12 properties)"
                              Foreground="#B0B0B0"
                              FontSize="12">
                        <TextBlock Text="AGP.TireTemp_FL/FR/RL/RR&#x0a;AGP.TirePressure_FL/FR/RL/RR&#x0a;AGP.TireWear_FL/FR/RL/RR&#x0a;AGP.TireGrip_FL/FR/RL/RR"
                                   Foreground="#707070"
                                   FontSize="10"
                                   Margin="20,5,0,0"
                                   FontFamily="Consolas"/>
                    </Expander>

                    <Expander Header="Brake Data (4 properties)"
                              Foreground="#B0B0B0"
                              FontSize="12">
                        <TextBlock Text="AGP.BrakeTemp_FL/FR/RL/RR"
                                   Foreground="#707070"
                                   FontSize="10"
                                   Margin="20,5,0,0"
                                   FontFamily="Consolas"/>
                    </Expander>

                    <Expander Header="Analysis (9 properties)"
                              Foreground="#B0B0B0"
                              FontSize="12">
                        <TextBlock Text="AGP.Understeer_Pct&#x0a;AGP.Oversteer_Pct&#x0a;AGP.TractionLoss_Pct&#x0a;AGP.BrakeLock_Pct&#x0a;AGP.CornerPhase&#x0a;AGP.BalanceScore&#x0a;AGP.EntryBalance&#x0a;AGP.MidCornerBalance&#x0a;AGP.ExitBalance"
                                   Foreground="#707070"
                                   FontSize="10"
                                   Margin="20,5,0,0"
                                   FontFamily="Consolas"/>
                    </Expander>

                    <Expander Header="Strategy (10 properties)"
                              Foreground="#B0B0B0"
                              FontSize="12">
                        <TextBlock Text="AGP.FuelLapsRemaining&#x0a;AGP.TireLapsRemaining&#x0a;AGP.PitWindowStart/End&#x0a;AGP.InPitWindow&#x0a;AGP.NextPitLap&#x0a;AGP.OptimalPitLap&#x0a;AGP.IsCritical&#x0a;AGP.CurrentStint&#x0a;AGP.CurrentDriver"
                                   Foreground="#707070"
                                   FontSize="10"
                                   Margin="20,5,0,0"
                                   FontFamily="Consolas"/>
                    </Expander>

                    <Expander Header="Live Timing (7 properties)"
                              Foreground="#B0B0B0"
                              FontSize="12">
                        <TextBlock Text="AGP.Position&#x0a;AGP.TotalCars&#x0a;AGP.GapAhead/Behind&#x0a;AGP.ThreatLevel&#x0a;AGP.NearestThreatName&#x0a;AGP.NearestThreatGap"
                                   Foreground="#707070"
                                   FontSize="10"
                                   Margin="20,5,0,0"
                                   FontFamily="Consolas"/>
                    </Expander>

                    <Expander Header="Calculated (3 properties)"
                              Foreground="#B0B0B0"
                              FontSize="12">
                        <TextBlock Text="AGP.BalanceIndicator (-100 to +100)&#x0a;AGP.TireCondition (0-100)&#x0a;AGP.FuelUrgency (0-100)"
                                   Foreground="#707070"
                                   FontSize="10"
                                   Margin="20,5,0,0"
                                   FontFamily="Consolas"/>
                    </Expander>
                </StackPanel>
            </Border>

            <!-- Version Info -->
            <TextBlock Text="Version 1.0.0"
                       Foreground="#505050"
                       FontSize="10"
                       HorizontalAlignment="Center"/>

        </StackPanel>
    </ScrollViewer>
</UserControl>
